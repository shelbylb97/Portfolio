<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Write a review:</h3>
    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Subject:</label> <br>
        <input class="form-input" type="text" id="review-subject" name="review-subject" />
      </div>
      <div class="form-group">
        <label for="project-desc">Description:</label> <br>
        <textarea class="form-input" id="review-body" name="review-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>
  {{#if reviews.length}}
  <div class="col-md-6 project-list">
    <h3>Past Reviews:</h3>
    {{#each reviews as |review|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/review/{{review.id}}">{{review.name}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
<script src="./js/contactPage.js"></script>